---
import './../css/global.css';
import npm_logo from './../assets/npm-2009.png';
import GithubInfoBadge from './GithubInfoBadge.astro';

---

<footer class="flex">
    <div class="hero-footer">
        <a href="https://www.npmjs.com/package/morse-in-one" target="_blank">
            <img src={npm_logo} width="100" alt=""/>
        </a>
        <img alt="npm" src="https://img.shields.io/npm/dw/morse-in-one">
        <GithubInfoBadge version="0.0.2"/>
    </div>
    <div class="links-footer">
        <a href="https://github.com/iamBijoyKar/morse-in-one" class="bold">About</a>
        <a href="https://github.com/iamBijoyKar/morse-in-one" class="bold">Contribute</a>
        <a href="https://github.com/iamBijoyKar/morse-in-one" class="bold">FAQs</a>
        <a href="https://github.com">GitHub</a>
        <a href="/Docs">Docs</a>
    </div>
</footer>

<style>
    footer{
        width: 100%;
        min-height: 2.5rem;
        background-color: var(--blue);
        padding: 1rem;
        justify-content: space-between;
    }
    .hero-footer{
        gap: 1rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    .links-footer{
        display: grid;
        gap: .5rem;
        grid-template-columns: 1fr 1fr 1fr;
        text-align: center;
        font-size: 18px;
    }
    @media screen and (max-width:480px){
        .links-footer{
            grid-template-columns: 1fr 1fr;
            gap: .7rem;
        }
        .hero-footer{
            display: flex;
            flex-direction: column;
        }
    }
</style>