---
import GithubInfoBadge from "./GithubInfoBadge.astro";
import './../css/global.css';
import menu_btn from './../assets/menu.png';
import close_btn from './../assets/close.png';

---
<header class="header flex" >
    <div class="heading bold">
        <div class="words">
            <span> All </span>
            <span> Morse </span>
            <span> All </span>
        </div>
     in One</div>
    <nav class="navbar flex">
        <a href="/" class="page-link">Home</a>
        <a href="/Docs" class="page-link">Docs</a>
        <a href="/About" class="page-link">About</a>
    </nav>
    <div class="menu-btns flex">
        <img src={menu_btn} width="20" class="hidden" id="menu-btn" alt="">
        <img src={close_btn} width="20" class="hidden" id="close-btn" alt="">
    </div>
    <div class="info-links">
        <GithubInfoBadge version="0.0.1" />
    </div>
    
</header>
<div class="sm-menu  flex-col ">
    <a href="/" class="page-link">Home</a>
    <a href="/Docs" class="page-link">Docs</a>
    <a href="/About" class="page-link">About</a>
</div>
<div class="sheet"></div>

<script>
    const menu:HTMLImageElement | null = document.querySelector('#menu-btn')
    const close:HTMLImageElement | null = document.querySelector('#close-btn')
    const sm_menu:HTMLDivElement | null = document.querySelector('.sm-menu')
    const sheet:HTMLDivElement | null = document.querySelector('.sheet')

    if(menu && close && sm_menu && sheet){
        menu.addEventListener('click',(e:Event)=>{
          e.stopPropagation()
            try{
                menu.style.display = 'none'
                close.classList.remove('hidden')
                sm_menu.classList.add('active')
                sheet.classList.add('active')
            }
            catch(err){
                console.log(err,'Menu Toggle')
            }
        })
        
            
        document.addEventListener('click',(e:Event)=>{
            if(sm_menu.classList.contains('active')){
                e.stopPropagation()
                try{
                    menu.style.display = 'block'
                    close.classList.add('hidden')
                    sm_menu.classList.remove('active')
                    sheet.classList.remove('active')
                }
                catch(err){
                    console.log(err,'Menu Toggle')
                }
            }
    })
        
        
    }

</script>

<style>
    
    .header{
        justify-content: space-between;
        align-items: center;
        height: 2.5rem;
        padding: 1.6rem 1rem;
        background-color: var(--violet);
        box-shadow: 3px 3px 6px #a7a7a7;
        margin-bottom: 2rem;
    }
    .heading{
        font-size: 25px;
        display: flex;
        gap: 6px;
        text-align: end;
    }
    .navbar{
        max-width: 20rem;
        width: 15rem;
        justify-content: space-between;
        align-items: center;
    }
    .navbar > .page-link{
        font-size: 18px;
    }
    .sm-menu{
        background-color: var(--pink);
        box-shadow: 5px 5px 15px #707070;
        border-radius: 5px;
        gap: 1rem;
        font-size: 20px;
        min-width: 60%;
        width: 70%;
        padding: 1rem;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 40%;
        left: 15%;
        display: none;
        z-index: 5;
    }
    .sm-menu > a{
        color: white;
    }
    .sm-menu.active{
       display: flex;

    }
    .sheet.active{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 3;
        background-color: rgba(49, 49, 49, 0.39);
    }
    #close-btn{
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 9;
    }
    .page-link{
        padding: 1rem;
    }
    .page-link:hover{
        background-color: var(--pink);
        color: azure;
        transition: .5s;
    }
    .words{
        overflow: hidden;
        height: 25px;
    }
    .words span{
        display: block;
        animation: wordspin 3s ease infinite  ;
        transition: 2s;
        color: dodgerblue;
    }
    @media screen and (max-width:480px){
        .navbar{
            display: none;
        }
        .menu-btns > #menu-btn{
            display: block;
            position: absolute;
            top: 1rem;
            right: 1rem;
        }
    }
    @keyframes wordspin{
        0%{
            transform: translateY(0);
        }
        50%{
            transform: translateY(-95%);
        }
        100%{
            transform: translateY(-200%);
        }
    }
</style>